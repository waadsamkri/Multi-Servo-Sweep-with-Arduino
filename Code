#include <Servo.h>

// create servo objects
Servo servo1;
Servo servo2;
Servo servo3;
Servo servo4;

void setup() {
  // attach each servo to its pin
  servo1.attach(5);  
  servo2.attach(3);  
  servo3.attach(6);  
  servo4.attach(9);  
}

void loop() {
  // sweep all servos from 0째 to 180째
  for (int pos = 0; pos <= 180; pos++) {
    servo1.write(pos);
    servo2.write(pos);
    servo3.write(pos);
    servo4.write(pos);
    delay(15);
  }

  // then sweep back from 180째 to 0째
  for (int pos = 180; pos >= 0; pos--) {
    servo1.write(pos);
    servo2.write(pos);
    servo3.write(pos);
    servo4.write(pos);
    delay(15);
  }
}
